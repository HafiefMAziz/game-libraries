<%- include('../layouts/header.ejs') %>
<%- include('./createForm.ejs') %>

<% if(tags){ %>
    <table class="table table-striped border my-3 align-middle">
        <thead>
            <tr>
                <th class="col-md-1">ID</th>
                <th class="col-md-6">Name</th>
                <th class="col-md-3 text-center">Options</th>
            </tr>
        </thead>
        <tbody>
        <% tags.forEach(tag => { %>
            <tr>
                <th>
                    <%= tag.id %>
                </th>
                <td>
                    <%= tag.name %>
                </td>
                <td class="text-center">
                    <a href="/tags/updateForm/<%= tag.id %>" type="button"
                        class="btn btn-primary me-1">Update</button>
                        <a href="/tags/delete/<%= tag.id %>" type="button"
                            class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% }); }%>
        </tbody>
    </table>
<%- include('../layouts/footer.ejs') %>